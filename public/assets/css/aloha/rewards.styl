.rewards-header
  .title-wrapper
    h3
      font-weight bold
      text-transform uppercase
      width 205px
  .my-list
    border 1px solid #979797
    height 24px
    line-height 24px
    position absolute
    right 16px
    text-align center
    top 8px
    vertical-align bottom
    width 95px
    a
      color #4D4D4D
      text-decoration none
    span
      background url('../images/valora-sprites.png') no-repeat -360px -33px
      display inline-block
      height 16px
      margin-right 15px
      width 16px
  .description-wrapper
    .filters
      a
        color inherit
        cursor: pointer
        display inline-block
        font-size 0.8em
        font-weight bold
        margin 0 2px
        padding 3px 6px 0 6px
        text-decoration none
        span
          color secondary_yellow
          display inline-block
        span.up
          width 0
          height 0
          border-left 8px solid transparent
          border-right 8px solid transparent
          border-bottom 10px solid secondary_yellow
        span.down
          width 0
          height 0
          border-left 8px solid transparent
          border-right 8px solid transparent
          border-top 10px solid secondary_yellow
.rewards-blocks
  .block-wrapper
    height 410px
    margin-top 41px
    .block
      height 241px
      position relative
      width 100%
      .reward-description
        background-color #e5e5e5
        color black
        font-size 0.8em
        height 50px
        padding 2px
        text-decoration none
      .reward-description:hover
        text-decoration none
      .block-header
        height 21px
        position relative
        width 100%
        .select
          color: #505050
          font-size .8em
          position absolute
          right 0
          text-align right
          width 75%
          input[type="checkbox"]
            display none
          input[type="checkbox"] + label span
            background-color #FFFFFF
            border 1px solid #979797
            cursor pointer
            display inline-block
            height 13px
            vertical-align middle
            width 13px
          input[type="checkbox"]:checked + label span
            background-color #7ED321
      .content-wrapper
        text-decoration none
        .block-content
          background-position center center
          background-repeat no-repeat
          -webkit-background-size cover
          -moz-background-size cover
          -o-background-size cover
          background-size cover
          height 100%
          position relative
          width 100%
          .new.active
            display: block
          .new
            background url('../images/aloha/ico_nuevo.png') no-repeat center
            background-size contain
            display none
            height 21px
            left 0
            margin 6px
            position absolute
            text-indent -9999px
            width 25%
        .details
          height 32px
          position absolute
          right 17px
          top 7px
          width 40px
          span
            background #252525 url('../images/aloha/ico_lock.png') no-repeat center
            border-radius 50%
            display inline-block
            height 40px
            width 40px
          span.active
            background #252525 url('../images/aloha/ico_unlock.png') no-repeat center
      .block-footer
        p
          font-size 0.7em
          margin 4px
        .description
          border-bottom 1px solid #000000
          color #FFFFFF
          height 30px
          opacity 0.7
          width 100%
          p:first-child
            height 33px
            line-height 12px
          p
            font-size .8em
            margin-bottom 0
            padding 2px 6px 0 6px
          .pts
            color aloha_blue
            font-size 0.9em
            font-weight bold
            margin-right 20px
            position relative
            a
              display inline-block
            .star,
            .like,
            .comments-icon
              position absolute
              right 0
              top 5px
            .star
              background url('../images/valora-sprites.png') no-repeat -384px -32px
              height 16px
              right 25px
              width 16px
            .star.active
              background url('../images/valora-sprites.png') no-repeat -360px -33px
            a.star:hover
              background url('../images/valora-sprites.png') no-repeat -360px -33px
            .like
              background url('../images/aloha/ico_like.png') no-repeat center
              background-size contain
              height 14px
              margin-left 4px
              top 7px
              width 16px
            .like.active
              background url('../images/aloha/ico_like_over.png') no-repeat center
              background-size contain
            a.like:hover
              background url('../images/aloha/ico_like_over.png') no-repeat center
              background-size contain
            .count
              bottom 13px
              color #000000
              font-size 0.7em
              position absolute
              right -17px
              text-align left
              width 16px
            .comments-icon
              background url('../images/aloha/ico_comentario.png') no-repeat center
              background-size contain
              height 16px
              right 35px
              top 8px
              width 16px
            .comments-icon.active
              background url("../images/aloha/ico_comentario_over.png") no-repeat center
              background-size contain
            .comments-count
              color #000000
              font-size 0.7em
              position absolute
              right 24px
              top 8px
      .comments-wrapper
        display none
        position absolute
        width 100%
        z-index 2
        .new-comment
          .profile-thumb
            background-position center center
            background-size cover
            border-radius 35px
            float left
            height 35px
            margin-left 10px
            width 35px
          input[type="text"]
            float left
            margin 4px 15px
            padding-left 5px
            width 70%
        .comments-list
          font-size 0.8em
          overflow hidden
          padding 2px 10px 2px 60px
          width 100%
          p
            margin-bottom 0
          .collaboratorName
            color primary_green
      .comments-wrapper.active
        display block
        background-color #FFFFFF
        border-bottom 1px solid
        height 90px
        overflow-y scroll
.pagination-wrapper
  margin-top 105px
  max-height 28px
  .pagination-col,
  .pagination,
  nav,
  p,
  a
    height 30px
  .pagination-col
    .btn
      border 1px solid #000000
      border-radius 0
      font-size 0.8em
      font-weight bold
      width 115px
    .pagination
      display inline-table
      height 28px
      margin 0;
      width 100%
      li
        display table-cell
      p
        float left
      a
        border none
        border-radius 0
        color #000000
        display block
        font-size .9em
        padding-top 2px
        text-align center
        text-decoration none
        width 100%
        span
          display inline-block
          height 30px
          padding-top 5px
          width 30px
        span.circle:hover
          background-color primary_green
          border-radius 30px
      a.prev
        margin 0
        padding 8px auto
        span
          margin-left 10px
      a.next
        padding 8px auto
        span
          margin-right 10px
      a:hover,
      a:focus
        background-color transparent
      li:first-child,
      li:last-child
        a
          span
            display inline
#rewardDetails
  .modal-dialog
    background-color white
    background-position center center
    background-size cover
    background-repeat no-repeat
    border 1px solid white
    height 600px
    width 855px
  .modal-content
    border-radius 0
    margin -1px
    position relative
    .modal-header
      border-bottom none
      border-radius 0
    .close
      background-color secondary_yellow
      border-radius 50px
      height 50px
      opacity 1
      padding 4px
      position absolute
      right -30px
      top -20px
      width 50px
      z-index 10
      span
        border-radius: 40px
        width: 40px
        color: white
        height: 40px
        background-color: secondary_yellow
        display: block
        font-size: 2.3em
        line-height: 36px