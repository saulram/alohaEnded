.checkout-header
  .title-wrapper
    height 40px
    margin-top 22px
    position relative
    h3
      background-color white
      border-bottom 1px solid aloha_blue
      color: aloha_blue
      height 40px
      left 10px
      line-height 40px
      margin 0
      text-align center
      vertical-align bottom
      width 290px
.titles
  margin-top 20px
  .col-wrapper:first-child
    padding-right 0
  .col-wrapper:last-child
    padding-left 0
  p
    background-color #e5e5e5;
    margin 0 auto
    padding 4px
.checkout
  .block-wrapper
    display flex
    flex-flow row
    justify-content space-between
    .reward-title
      max-height 200px
      max-width 200px
      overflow: hidden
      p
        height 200px
    .delete-reward
      height 200px
      position relative
      width 50px
      .delete-btn
        color #000000
        font-size 1em
        margin-top -20px
        position absolute
        top 50%
        span
          background-color secondary_yellow
          border-radius 50%
          color white
          display inline-block
          font-size 0.9em
          font-weight bold
          height 25px
          padding-top 2px
          width 25px
    .reward-img
      background-size cover
      background-repeat no-repeat
      height 200px
      width 355px
    .balance-pts
      height 200px
      width 100px
      p
        color aloha_blue
        line-height 200px
.balance-title
  text-align right
.balance
  font-size 0.8em
  font-weight bold
  padding 4px
  .col-wrapper:first-child
    padding-right 0
  .col-wrapper:last-child
    padding-left 0
  p
    background-color #e5e5e5
    margin 0 auto
    padding 4px
  .total-points
    text-align right
.btn-actions
  color white
  margin-top 20px
  .cancel
    background-color aloha_melon
  .confirm
    background-color aloha_blue
.checkout-modal
  .modal-dialog
    .modal-content
      background-color #FFFFFF
      color #000000
      font-size 1.1em
      text-align center
    .modal-header
      border-bottom none
      color aloha_blue
      font-weight bolder
      position relative
      text-align center
      h4
        font-size 1.7em
      .close
        background-color secondary_yellow
        border 1px solid secondary_yellow
        border-radius 50px
        height 50px
        opacity 1
        padding 4px
        position absolute
        right -30px
        top -20px
        width 50px
        span
          border-radius: 40px
          width: 40px
          color: #FFFFFF
          height: 40px
          background-color: secondary_yellow
          display: block
          font-size: 1.5em
          line-height: 36px
    .modal-footer
      border-top none
      .btn
        background-color #FFFFFF
        border 4px solid #000000
        border-radius 0
        color #000000
        margin-right 120px
#ticket
  .modal-footer
    height 70px
    position relative
    .btn
      left 50%
      margin-left -62px
      position absolute
      width 125px