
aloha_blue = #00A2D7
primary_green= #85C380
secondary_yellow= #EFC319
aloha_melon = #EE862D

white = #FFFFFF

.dashboard.container.admin
  overflow: initial !important
  .row.row-no-gutters
    .col-md-4, .col-md-6
      padding-left: 8px
      padding-right: 8px;



  .bg_aloha_blue
    background-color: aloha_blue
  .bg_primary_green
    background-color: primary_green
  .bg_secondary_yellow
    background-color: secondary_yellow
  .bg_aloha_melon
    background-color: aloha_melon

  .red
    background-color: #e2001d
  .orange
    background-color: #f27400
  .brown
    background-color: #7e461b
  .light_green
    background-color: #43b8a1
  .yellow
    background-color: #ffd000
  .green
    background-color: #00b15b

  .bold
    font-weight: bold

  
  // Helper classes
  .no-gutter
    padding-left: 0 !important
    padding-right: 0 !important
  .no-gutter-left
    padding-left: 0 !important
  .no-gutter-right
    padding-right: 0 !important
  .mt-0
    margin-top: 0
  .mt-1
    margin-top: .25em
  .mt-2
    margin-top: .5em
  .mt-3
    margin-top: 1em
  .mt-4
    margin-top: 1.5em
  .mt-5
    margin-top: 3em

  .mb-0
    margin-bottom: 0
  .mb-1
    margin-bottom: .25em
  .mb-2
    margin-bottom: .5em
  .mb-3
    margin-bottom: 1em
  .mb-4
    margin-bottom: 1.5em
  .mb-5
    margin-bottom: 3em

  .d-inline
    display inline
  .d-inlineblock
    display inline-block

  h3
    font-size: 14px
    font-weight: bold
  h4
    font-size: 12px
    font-weight: bold

  select
    max-width 100%
    font-size: 13px


 
  .tabs-wrapper
    height: 60px
    margin-top: 22px;
    position: relative;
  .tabs
    display: flex
    justify-content: center
    list-style: none
    li
      padding: 8px 20px
      border: solid 3px white
      cursor: pointer
    li:hover
      background-color: primary_green
    li.selected
      background-color: primary_green
      cursor: default
  
  .dashboard_title
    border-bottom: solid 2px #e6e6e6
    h3
      margin-bottom: .5em
  

  .section
    padding: 15px
    background-color: white
    height: 396px
    select
      float: right
      margin-right: 15px
      max-width: 150px
      font-size: 13px

    .buttons-container
      position: absolute
      bottom: 15px
      right: 30px
      a>button
        color: #000
    
    .filter_zone
      display: flex
      justify-content: center
      width: 100%
      div
        padding: 15px
        font-size: 12px
        font-weight: bold
        cursor: pointer
      div:hover:not(.selected)
        text-decoration: underline
      div.selected
        color: #008dc2
        cursor: default



  #generalMetrics
    background-color: white
    height: 806px
    padding: 15px
    .counter
      display: flex
      flex-direction: column
      align-items: center
      justify-content: center
      height 65px
      margin-top: 15px
      color: white
      .big_number
        font-size: 32px

  #embassies
    .section
      height: auto
      .values
        list-style: none
        padding: 15px
        .valueItem
          display: flex
          width: 100%
          height: 60px
          margin: 10px 0
          color: #ffffff
          .value
            display flex
            align-items: center
            width 38%
            height 60px
            padding: 0 15px
          .description
            display flex
            align-items: center
            background-color: #e6e6e6
            width: 62%
            justify-content: space-between
            padding: 0 15px
            .avatar
              display flex
              align-items: center
              justify-content: center
              width 45px
              height 45px
              border-radius: 23px
            .person
              width 62%
              span
                font-size: 12px
                display flex
                align-items: center
                display: block
                color: #000000
            .number
              display: flex
              align-items: center
              justify-content: center
              height: 100%
              align-self: end
              font-size: 28px
              color: #000000
              font-weight: bold
        

