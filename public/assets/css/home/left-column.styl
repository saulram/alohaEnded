  .valores,
  .competencias
    .embajador-wrapper
      p
        text-align center
      .img-wrapper
        height 140px
        position relative
        width 100%
        img
          left 50%
          margin-left -50px
          position absolute
          width 100px
      .embajador
        font-size 1em
      .name
        color #FB8C8D
        font-size 1.1em
        letter-spacing .4em
        text-transform uppercase
      .count
        color #B3B3B3
        font-size .8em
    .ver-mas
      height 30px
      position relative
      text-align center
      vertical-align middle
      width 100%
      a
        border 1px solid #000000
        color #000000
        display inline-block
        left 50%
        line-height 30px
        margin-left -55px
        position absolute
        text-decoration none
        width 115px
  .valores
    border-bottom 1px solid #E5E5E5
    .valores-title
      background-color #000000
      color aloha_mint
      font-size 1.1em
      height 37px
      line-height 37px
      text-align center
      vertical-align middle
    .ver-mas
      a
        font-weight bold
        left initial
        right 3%
  .competencias
    .competencias-title
      background-color #4D4D4D
      color #FFFFFF
      font-size 1.1em
      height 37px
      line-height 37px
      text-align center
      vertical-align middle
  .mentions
    height 400px
    overflow: hidden
    .title
      background-color #000000
      color aloha_mint
      font-size 1em
      height 37px
      line-height 37px
      text-align center
    .mention-wrapper
      height 100%
      overflow hidden
      .mention
        border-bottom 1px solid #e5e5e5
        margin-bottom 2px
        padding 4px
      .date
        font-size 10px
        margin 1px auto
        text-align right