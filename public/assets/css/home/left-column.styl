.left-column
  border-right 1px solid #E5E5E5
  .profile-block
    border-bottom 1px solid #E5E5E5
    height 120px
    margin 20px auto;
    .profile-img-block
      float left
      margin-right 14px
      position relative
      .img-circle
        background-position center center
        background-repeat no-repeat
        background-size cover
        height 60px
        width 60px
      .add-profile-img
        background url("../images/valora-sprites.png") no-repeat -156px -35px
        bottom: -4px
        height: 16px
        position absolute
        right 6px
        width 16px
    .info
      float: left
      max-width 190px
      p
        margin auto auto 2px auto
      .name
        font-size 1.2em
        text-transform capitalize
      .location
        font-size .8em
      .points
        font-size 1.3em
        color aloha_strong_blue
  .left-menu
    li
      //background url("../images/dot-list.png") no-repeat left top;
      list-style: none
      margin 0
      padding 0 0 25px 27px
      position relative
      a
        color #4D4D4D
        vertical-align middle
        text-decoration none
      a:hover
        color aloha_light_blue
      span.badge-warning
        background-color aloha_mint
