.my-activity
  .activity-list,
  .label-header
    height 100px
    div
      p
        text-align right
      div:first-child
        p
          text-align left
  .label-header
    background-color #4d4d4d
    height 30px
    p
      color #FFFFFF
      font-weight 100
      margin 0 auto
      padding 5px 8px
    .date-title
      text-align center
  .activity-list
    div
      display table
      height 100%
    .row
      width 100%
  .activity-list
    background-color #f4f4f4
    border-bottom 6px solid #FFFFFF
    margin-top 2px
    .content
      display table-cell
      font-size 1.2em
      height 100%
      margin 0 auto
      padding 1px 10px
      vertical-align middle
      .title
        color: #a547ff
      .details
        color: #a547ff
        cursor pointer
        font-size 0.8em
        text-decoration none
      .heart
        background url("../images/valora-sprites.png")
        background-position -384px -51px
        background-repeat no-repeat
        display inline-block
        height 14px
        width 16px
  .activity-list.active
    background-color #FFFFFF
