@media xlarge
  .login
    .login-form
      .form-group
        .error
          right -25%
          top 36%

@media large
  .dynamic-content
    .feed
      .btn-filter-wrapper
        .btn-filter
          display inline-block
          margin 5px 3px
      .feed-wrapper
        .createdAt
          margin-top 15px
        .feed-content
          .comment
            bottom  12px
            right 20px
          .like
            right 10px
            height initial
            bottom 8px
  @media medium
    .dynamic-content
      .feed
        .feed-wrapper
          .feed-content
            .feed-text
              width 85%
@media small
  //admin header
  .navbar-default navbar-collapse  .admin-menu .admin-link
    height: inherit
    margin 0 auto
  .navbar-default
    .navbar-collapse
      .admin-menu
        height inherit
        margin-left 0
        display inline-block
  .admin-nav
    .navbar-collapse
      .navbar
        height auto
        display flex
        overflow-x auto
        white-space nowrap

    .container-fluid
      .collapse
        display block
        background #fb8c8d

  .navbar-default
    .navbar-collapse
      background #696969
      position relative
      z-index 2
      .navbar-nav
        li
          a
            border-bottom 1px solid transparent
            padding 4px
  .login
    .login-form
      text-align center
      margin-top 0px
      form
        height auto
      .form-control
        margin-left 0px
      .form-group
        label
          text-align center
        span
          text-align center
          position relative
          display block
          top inherit
          right initial
      .btn-wrapper
        text-align center
  .dynamic-content
    .feed
      .btn-filter-wrapper
        .btn-filter
          display inline-block
          margin 5px 3px
      .feed-wrapper
        .createdAt
          margin-top 15px
        .feed-content
          .comment
            bottom  10px
            right 20px
          .like
            right 10px
            height initial
            bottom 8px
@media small
  .dynamic-content
    padding 0
    .recognize-badges
      .badges-container
        //MODAL
        #recognize
          left 5%
          right 5%
          width auto
          box-sizing content-box
        margin-left 0
        .badge-wrapper
          height auto
          margin 0 auto
          width auto
          display block
          .badge-img-wrapper
            margin-left 0
            left inherit
            position relative
            margin 0 auto
          .badge-description
            padding 0
            height auto
            display block
            width auto
            margin 0 auto
            p:first-child
              padding-top 0!important
              height auto!important
              display block
        .competences-carousel-wrapper
          .competences-carousel
            display block
            height auto
            left initial
            overflow hidden
            width auto
        .special-carousel-wrapper
          .special-carousel
            .badge-wrapper
              display block
    .pagination-wrapper
      margin-top 50px
      max-height inherit
      .pagination-col
        padding 0
        height auto
        .btn
          display block
          margin 10px auto
        .pagination
          display flex
          width auto
          height auto
          overflow hidden
          justify-content center
          a
            span
              width auto
            span.circle:hover
              background transparent
              text-decoration underline
          > li
            > a
              padding 0px 5px
@media small
  footer
    .gp-wrapper
      .gp-logo
        position relative
        width 80%
        left 0
        margin 0 auto
  .dynamic-content
  .feed
    .feed-wrapper
      .feed-content
        .feed-text
          margin-bottom 20px
    .recognize-badges
      .categories
        margin 10px 0
        .block-wrapper
          p
            font-size 11px
            top 98px
            line-height 1
            bottom inherit
      .choose-collaborator-wrapper
        height inherit
        .choose-collaborator
          margin 0 auto
          .badge-form
            min-height 200px
            input[type="text"]
              width 100%
            .collaborators-wrapper
              width 100%
  .dynamic-content
    .title-wrapper
      height inherit
    .rewards-header
      .my-list
        position relative
        height inherit
        top inherit
        right inherit
        margin  5px 0 0 0
    .title-wrapper
    height inherit
    .my-activity
      .activity-list
        height inherit
        padding-bottom 10px

